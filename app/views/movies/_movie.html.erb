<div id="<%= dom_id movie %>">
  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Launch year:</strong>
    <%= movie.launch_year %>
  </p>
  
  <% if show_details %>
  <p>
    <strong>Cast:</strong>
    <ul>
      <% movie.actors.each do |actor| %>
        <li>
          <%= actor.name %>
        </li>
      <% end %>
    </ul>
  </p>
  <% end %>

  <% if show_details %>
  <p>
    <strong>Reviews:</strong>
    
      <% movie.reviews.each do |review| %>
      <p>
        <span>Rate: <%= review.rating %></span><br>
        Comment: <q><%= review.comment %></q>        
    </p>
      <% end %>
  </p>
  <% end %>

</div>
