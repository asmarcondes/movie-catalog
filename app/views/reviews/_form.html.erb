<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <%= render 'layouts/error', entity: review.class, errors: review.errors%>
  </div>
<% end %>
<div>
  <%= form.label :comment, style: "display: block" %>
  <%= form.text_area :comment %>
</div>
<div>
  <%= form.label :rating, style: "display: block" %>
  <%= form.number_field :rating %>
</div>
<div>
  <%= form.label :movie_id, style: "display: block" %>
  <%= form.select :movie_id, @all_movies %>
</div>
<div>
  <%= form.submit %>
</div>
<% end %>
